{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "./out/**/*",
    "./test/**/*"
  ]
}
