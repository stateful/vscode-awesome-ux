{
  "name": "awesome-ux",
  "displayName": "Awesome UX",
  "description": "Reference implementation of an VSCode extension with an awesome UX",
  "version": "0.4.1",
  "license": "MIT",
  "publisher": "stateful",
  "icon": ".github/assets/stateful.png",
  "galleryBanner": {
    "color": "#2F2F2F",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stateful/vscode-awesome-ux.git"
  },
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "extension",
    "best practices"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./out/web.js",
  "main": "./out/index.js",
  "extensionKind": [
    "ui"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "Awesome Extension",
        "properties": {
          "vscode-awesome-ux.configuration.defaultNotifications": {
            "type": "number",
            "scope": "resource",
            "default": 0,
            "markdownDescription": "The default value of received example notification (default `0`)"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "tangle.emit",
        "title": "Ring Bell!"
      },
      {
        "command": "vscode-awesome-ux.getController",
        "title": "_"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "panel1",
          "name": "Example Panel 1",
          "type": "webview",
          "visibility": "visible"
        },
        {
          "id": "panel2",
          "name": "Example Panel 2",
          "type": "webview",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "build": "run-s clean compile",
    "clean": "rimraf out",
    "compile": "rollup -c ./rollup.config.mjs",
    "test": "run-s test:*",
    "test:lint": "eslint src --ext ts",
    "test:e2e": "cd test && npx wdio run ./wdio.conf.ts",
    "watch": "npm run clean && npm run compile -- --watch"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.73.1",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@vscode/test-electron": "^2.2.0",
    "@wdio/cli": "^7.26.0",
    "@wdio/local-runner": "^7.26.0",
    "@wdio/mocha-framework": "^7.26.0",
    "@wdio/spec-reporter": "^7.26.0",
    "chromedriver": "107",
    "eslint": "^8.28.0",
    "eta": "^1.12.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.4.0",
    "rollup-plugin-eta": "^1.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vsce": "^2.14.0",
    "wdio-vscode-service": "^4.2.1",
    "webdriverio": "^7.26.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.32",
    "@vscode/webview-ui-toolkit": "^1.2.0",
    "lit": "^2.4.1",
    "rollup-plugin-multi-input": "^1.3.1",
    "rxjs": "^7.5.7",
    "tangle": "^3.0.0-beta.0"
  }
}
